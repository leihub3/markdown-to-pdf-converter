{
  "name": "markdown-to-pdf",
  "version": "1.0.0",
  "description": "Convert Cursor .plan.md files (with Mermaid diagrams) to high-quality PDF",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "md-to-pdf": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "md-to-pdf": "node dist/cli.js",
    "ui": "node dist/server/index.js",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "markdown",
    "pdf",
    "mermaid",
    "cursor",
    "plan"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.2.0",
    "express": "^4.21.0",
    "marked": "^15.0.4",
    "playwright": "^1.49.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  },
  "optionalDependencies": {}
}
